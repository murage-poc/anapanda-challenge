{{#if this.pinnedTasks}}
  <div class="pinned-tasks-title d-flex flex-row">
    <span>Pinned Tasks</span>
  </div>
  <div class="d-flex flex-column pinned-task-list">
    {{#each this.pinnedTasks as |task|}}
      <SingleTask @task={{task}} />
    {{/each}}
  </div>
{{/if}}

{{#if this.unPinnedTasks}}
  <div class="d-flex flex-column">
    {{#each this.unPinnedTasks as |task|}}
      <SingleTask @task={{task}} />
    {{/each}}

  </div>
{{/if}}