<TasksNavTabs @toggleTabView={{this.showTab}}
              @completedTasks={{this.completedTasksTotal}}
              @ showCompletedTasksTab={{this.showCompletedTasks }}
              @showAllTasksTab={{this.showAllTasks}}>
</TasksNavTabs>
<div class="main-content">
  {{#if this.showAllTasks }}

    {{#if this.inCompleteTasks}}

      <div class="section-title d-flex flex-row justify-content-between">
        <span class="mr-auto">Task</span>
        <span class="ml-auto">Actions</span>
      </div>

      <TaskList @tasks={{this.inCompleteTasks}} />

    {{else}}


      <EmptyTaskList @message="Congrats! Looks like you have completed all tasks"/>

    {{/if}}

  {{else if this.showCompletedTasks}}

    {{#if this.completedTasks}}

      <div class="section-title d-flex flex-row justify-content-between">
        <span class="mr-auto">Task</span>
        <span class="ml-auto">Actions</span>
      </div>

      <TaskList @tasks={{this.completedTasks}} />

    {{else}}

      <EmptyTaskList @message="Looks like you haven't completed any task"
                     @complete={{true}}></EmptyTaskList>

    {{/if}}
  {{/if}}


</div>
